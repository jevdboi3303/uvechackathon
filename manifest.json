{
  "manifest_version": 3,
  "name": "Web Notes â€” Community Notes for the Web",
  "version": "0.1.0",
  "description": "Highlight text on any page and leave public notes tied to the URL or selection.",
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.supabase.co/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["supabaseClient.js", "contentScript.js", "injectPanel.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Web Notes"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*.supabase.co"
  }
}
